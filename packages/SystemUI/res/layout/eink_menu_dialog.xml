<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:clickable="true">

    <TextView
        android:id="@+id/eink_dialog_title_text"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/eink_app_optimize" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eink_dialog_dpi_layout"
        android:layout_below="@+id/eink_dialog_title_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:background="#ffffff"
            android:id="@+id/eink_dialog_dpi_text"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="@string/eink_dpi_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
        <TextView
            android:background="#ffffff"
            android:id="@+id/eink_dialog_dpi_edit"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/eink_dialog_dpi_text"
            android:layout_marginLeft="10dp" />
        <SeekBar
            android:id="@+id/eink_dialog_dpi_seekbar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:max="240"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/eink_dialog_dpi_edit"/>
        <CheckBox
            android:id="@+id/eink_dialog_dpi_checkbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/eink_dialog_animation_layout"
        android:layout_below="@+id/eink_dialog_dpi_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:visibility="invisible">
        <TextView
            android:background="#ffffff"
            android:id="@+id/eink_dialog_animation_text"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="@string/eink_animation_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
        <TextView
            android:background="#ffffff"
            android:id="@+id/eink_dialog_animation_edit"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/eink_dialog_animation_text"
            android:layout_marginLeft="10dp" />
        <SeekBar
            android:id="@+id/eink_dialog_animation_seekbar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:max="100"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eink_dialog_contrast_layout"
        android:layout_below="@+id/eink_dialog_animation_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:background="#ffffff"
            android:id="@+id/eink_dialog_contrast_text"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="@string/eink_contrast_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
        <TextView
            android:background="#ffffff"
            android:id="@+id/eink_dialog_contrast_edit"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/eink_dialog_contrast_text"
            android:layout_marginLeft="10dp" />
        <SeekBar
            android:id="@+id/eink_dialog_contrast_seekbar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:max="80"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eink_dialog_refresh_layout"
        android:layout_below="@+id/eink_dialog_contrast_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:background="#ffffff"
            android:id="@+id/eink_dialog_refresh_text"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="@string/eink_refresh_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
        <Button
            android:id="@+id/eink_dialog_refresh_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_eink_settings"
            android:layout_toLeftOf="@+id/eink_dialog_refresh_checkbox"
            android:layout_marginLeft="10dp"/>
        <CheckBox
            android:id="@+id/eink_dialog_refresh_checkbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eink_dialog_bleach_layout"
        android:layout_below="@+id/eink_dialog_refresh_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:background="#ffffff"
            android:id="@+id/eink_dialog_bleach_text"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="@string/eink_app_bleach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
        <Button
            android:id="@+id/eink_dialog_bleach_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_eink_settings"
            android:layout_toLeftOf="@+id/eink_dialog_bleach_checkbox"
            android:layout_marginLeft="10dp"/>
        <CheckBox
            android:id="@+id/eink_dialog_bleach_checkbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>
