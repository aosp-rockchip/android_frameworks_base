<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="180dp"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/eink_refresh_dialog_layout">
        <TextView
            android:id="@+id/eink_refresh_dialog_title_text"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="@string/eink_refresh_setting" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eink_refresh_dialog_mode_layout"
            android:layout_below="@+id/eink_refresh_dialog_title_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:background="#ffffff"
                android:id="@+id/eink_refresh_dialog_mode_text"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="@string/eink_refresh_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" />
            <!--<Spinner
                android:id="@+id/eink_refresh_dialog_mode_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/eink_refresh_mode"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>-->
            <Button
                android:background="@null"
                android:id="@+id/eink_refresh_dialog_mode_common_button"
                android:textColor="#000000"
                android:textSize="10sp"
                android:text="@string/eink_common_mode"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/eink_refresh_dialog_mode_auto_button"
                android:layout_marginRight="20dp" />
            <Button
                android:background="@null"
                android:id="@+id/eink_refresh_dialog_mode_auto_button"
                android:textColor="#000000"
                android:textSize="10sp"
                android:text="@string/eink_auto_mode"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/eink_refresh_dialog_mode_a2_button"
                android:layout_marginRight="10dp" />
            <Button
                android:background="@null"
                android:id="@+id/eink_refresh_dialog_mode_a2_button"
                android:textColor="#000000"
                android:textSize="10sp"
                android:text="@string/eink_a2_mode"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eink_refresh_dialog_frequency_layout"
            android:layout_below="@+id/eink_refresh_dialog_mode_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:background="#ffffff"
                android:id="@+id/eink_refresh_dialog_frequency_text"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="@string/eink_refresh_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" />
            <TextView
                android:background="#ffffff"
                android:id="@+id/eink_refresh_dialog_frequency_edit"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/eink_refresh_dialog_frequency_text"
                android:layout_marginLeft="10dp" />
            <SeekBar
                android:id="@+id/eink_refresh_dialog_frequency_seekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxHeight="2dp"
                android:max="100"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>