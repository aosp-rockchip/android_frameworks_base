<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_eink_app_bleach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/eink_app_bleach"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/title_eink_app_bleach_text_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_eink_app_bleach"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:text="@string/eink_app_bleach_text_plus"
        android:textColor="#000000"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cb_eink_app_bleach_text_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title_eink_app_bleach_text_plus"
        android:layout_alignBottom="@+id/title_eink_app_bleach_text_plus"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/title_eink_app_bleach_text_plus" />

    <TextView
        android:id="@+id/title_eink_app_bleach_icon_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_eink_app_bleach_text_plus"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:text="@string/eink_app_bleach_icon_color"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_eink_app_bleach_icon_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title_eink_app_bleach_icon_color"
        android:layout_alignBottom="@+id/title_eink_app_bleach_icon_color"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/title_eink_app_bleach_icon_color"
        android:background="#ffffff"
        android:minEms="3"
        android:textColor="#000000"
        android:textSize="16sp" />

    <SeekBar
        android:id="@+id/sb_eink_app_bleach_icon_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title_eink_app_bleach_icon_color"
        android:layout_alignBottom="@+id/title_eink_app_bleach_icon_color"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/txt_eink_app_bleach_icon_color"
        android:max="255" />

    <TextView
        android:id="@+id/title_eink_app_bleach_cover_color"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/title_eink_app_bleach_icon_color"
        android:layout_alignLeft="@+id/title_eink_app_bleach_icon_color"
        android:layout_alignRight="@+id/title_eink_app_bleach_icon_color"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:text="@string/eink_app_bleach_cover_color"
        android:textColor="#000000"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_eink_app_bleach_cover_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title_eink_app_bleach_cover_color"
        android:layout_alignBottom="@+id/title_eink_app_bleach_cover_color"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/title_eink_app_bleach_cover_color"
        android:background="#ffffff"
        android:minEms="3"
        android:textColor="#000000"
        android:textSize="16sp"
        android:visibility="invisible" />

    <SeekBar
        android:id="@+id/sb_eink_app_bleach_cover_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title_eink_app_bleach_cover_color"
        android:layout_alignBottom="@+id/title_eink_app_bleach_cover_color"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/txt_eink_app_bleach_cover_color"
        android:max="150"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/title_eink_app_bleach_bg_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_eink_app_bleach_cover_color"
        android:layout_alignLeft="@+id/title_eink_app_bleach_icon_color"
        android:layout_alignRight="@+id/title_eink_app_bleach_icon_color"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:text="@string/eink_app_bleach_bg_color"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_eink_app_bleach_bg_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title_eink_app_bleach_bg_color"
        android:layout_alignBottom="@+id/title_eink_app_bleach_bg_color"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/title_eink_app_bleach_bg_color"
        android:background="#ffffff"
        android:minEms="3"
        android:textColor="#000000"
        android:textSize="16sp" />

    <SeekBar
        android:id="@+id/sb_eink_app_bleach_bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title_eink_app_bleach_bg_color"
        android:layout_alignBottom="@+id/title_eink_app_bleach_bg_color"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/txt_eink_app_bleach_bg_color"
        android:max="255" />
</RelativeLayout>